<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="#FBFBFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tip Image (optional) -->
        <ImageView
            android:id="@+id/tipImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/image_border" />

        <!-- Tip Title -->
        <TextView
            android:id="@+id/tipTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip Title"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/alexandriamedium"
            android:textColor="#4F576B"/>

        <!-- Tip Content -->
        <TextView
            android:id="@+id/tipContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip content goes here..."
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:fontFamily="@font/alexandriaregular"
            android:textColor="#9D9D9D"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tipLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read more..."
            android:textColor="#D16B78"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:autoLink="web"
            android:visibility="gone" />


    </LinearLayout>
</androidx.cardview.widget.CardView>






